<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="XML.Escena.TrackC"
            prefHeight="400.0" prefWidth="600.0">
    <VBox
            alignment="CENTER"
            spacing="40">
        <GridPane
                AnchorPane.topAnchor="20"
                alignment="CENTER"
                hgap="10"
                vgap="10">
            <padding>
                <Insets top="25" right="25" bottom="0" left="25" />
            </padding>

            <Label
                    text="Nombre"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="0"/>
            <TextField
                    fx:id="txtNombre"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="0"/>
            <Label
                    text="Album"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="1"/>
            <ComboBox
                    fx:id="cmbAlbum"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="1"/>
            <Label
                    text="Tipo de Medio"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="2"/>
            <ComboBox
                    fx:id="cmbMedio"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="2"/>
            <Label
                    text="Genero"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="3"/>
            <ComboBox
                    fx:id="cmbGenre"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="3"/>
            <Label
                    text="Compositor"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="4"/>
            <TextField
                    fx:id="txtComposer"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="4"/>
            <Label
                    text="Duracion en mili"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="5"/>
            <TextField
                    fx:id="txtMilli"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="5"/>
            <Label
                    text="Bytes"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="6"/>
            <TextField
                    fx:id="txtBytes"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="6"/>
            <Label
                    text="Precio"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="7"/>
            <TextField
                    fx:id="txtPrecio"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="7"/>



        </GridPane>
        <HBox
                alignment="CENTER"
                spacing="20" >
            <Button
                    text="Aceptar"
                    onAction="#handleAceptarAction"
                    AnchorPane.bottomAnchor="25" />

            <Button
                    text="Cancelar"
                    onAction="#handleCancelarAction"
                    AnchorPane.bottomAnchor="25" />

        </HBox>
    </VBox>
</AnchorPane>

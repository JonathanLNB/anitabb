<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="XML.Escena.EmpleadoNC"
            prefHeight="400.0" prefWidth="700.0">
    <VBox
            alignment="CENTER"
            spacing="40">
        <GridPane
                AnchorPane.topAnchor="20"
                alignment="CENTER"
                hgap="10"
                vgap="10">
            <padding>
                <Insets top="25" right="0" bottom="0" left="25" />
            </padding>

            <Label text="Nombre"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="0"/>
            <TextField fx:id="txtNombre"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>
            <Label text="Apellido"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"/>
            <TextField fx:id="txtApellido"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
            <Label text="Titulo"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="2"/>
            <TextField fx:id="txtTitulo"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
            <Label text="Jefe Directo"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="3"/>
            <ComboBox fx:id="cmbJefe"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="3"/>
            <Label text="Fecha Nacimiento"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="4"/>
            <DatePicker fx:id="dpFechaNac"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="4"/>
            <Label text="Fecha Contratacion"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="5"/>
            <DatePicker fx:id="dpFechaCon"
                        GridPane.columnIndex="1"
                        GridPane.rowIndex="5"/>
            <Label text="Direccion"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="0"/>
            <TextField fx:id="txtAddress"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="0"/>
            <Label text="Ciudad"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="1"/>
            <TextField fx:id="txtCity"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="1"/>
            <Label text="Estado/Provincia"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="2"/>
            <TextField fx:id="txtState"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="2"/>
            <Label text="Pais"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="3"/>
            <TextField fx:id="txtCountry"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="3"/>
            <Label text="Codigo Postal"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="4"/>
            <TextField fx:id="txtCP"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="4"/>
            <Label text="Telefono"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="5"/>
            <TextField fx:id="txtPhone"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="5"/>
            <Label text="Fax"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="6"/>
            <TextField fx:id="txtFax"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="6"/>
            <Label text="Email"
                   GridPane.columnIndex="2"
                   GridPane.rowIndex="7"/>
            <TextField fx:id="txtEmail"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="7"/>


        </GridPane>
        <HBox
                alignment="CENTER"
                spacing="20" >
            <Button
                    text="Aceptar"
                    onAction="#handleAceptarAction"
                    AnchorPane.bottomAnchor="25" />

            <Button
                    text="Cancelar"
                    onAction="#handleCancelarAction"
                    AnchorPane.bottomAnchor="25" />

        </HBox>
    </VBox>
</AnchorPane>

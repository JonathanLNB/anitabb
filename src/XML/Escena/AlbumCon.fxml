<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="XML.Escena.AlbumConC"
            prefHeight="400.0" prefWidth="600.0">
    <VBox
            spacing="40"
            alignment="CENTER"
            AnchorPane.topAnchor="25"
            AnchorPane.rightAnchor="0"
            AnchorPane.leftAnchor="0">
        <padding>
            <javafx.geometry.Insets bottom="20" top="20" left="20" right="20"/>
        </padding>

        <TableView
                fx:id="tableAlbumes">
            <columns>
                <TableColumn
                        fx:id="tabcolTitulo"
                        text="Titulo"/>
                <TableColumn
                        fx:id="tabcolArtista"
                        text="Artista"/>

            </columns>
        </TableView>

        <HBox
                alignment="CENTER"
                spacing="20" >
            <Button
                    onAction="#handleVerAction"
                    text="Ver Detalle"
                    AnchorPane.bottomAnchor="25" />
            <Button
                    onAction="#handleModificarAction"
                    text="Modificar"
                    AnchorPane.bottomAnchor="25" />
            <Button
                    onAction="#handleEliminarAction"
                    text="Eliminar"
                    AnchorPane.bottomAnchor="25" />


        </HBox>

    </VBox>
</AnchorPane>
